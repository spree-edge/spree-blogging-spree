<div id="blog_entry_container" class="row">
  <% if !@blog_entries.empty? %>
      <% @blog_entries.each do |blog_entry| %>
        <%= render :partial => 'spree/blog_entries/blog_entry', :locals => {:blog_entry => blog_entry} %>
      <% end %>
  <% else %>
    <p><%= Spree.t(:no_blog_entries) %></p>
  <% end %>
</div>

<div class="row d-flex justify-content-end">
  <%= paginate @blog_entries, theme: 'twitter-bootstrap-4' %>
</div>
